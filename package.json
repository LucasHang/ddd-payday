{
  "name": "ddd-payday",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/LucasHang/ddd-payday.git",
  "author": "Lucas Hang <lucas.hhang@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "start": "set NODE_ENV=production && node -r ./tsconfig-paths-bootstrap.js ./dist/index.js",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "build:watch": "tsc -w --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy -r ./tsconfig-paths-bootstrap.js ./dist/index.js",
    "up": "npm run build && docker-compose up",
    "down": "docker-compose down",
    "test": "jest --no-cache",
    "test:dev": "jest --watch --silent",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.1",
    "@types/jest": "^26.0.20",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "axios": "^0.21.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tscpaths": "^0.0.9",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "nodemon": "^2.0.7",
    "shallow-equal-object": "^1.1.1",
    "uuid": "^8.3.2",
    "tsconfig-paths": "^3.9.0"
  }
}
